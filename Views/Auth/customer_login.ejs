<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg">

<head>

    <meta charset="utf-8" />
    <title>
        <%-title%> </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="<%= process.env.AAP_URL %>assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="<%= process.env.AAP_URL %>assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="<%= process.env.AAP_URL %>assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="<%= process.env.AAP_URL %>assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="<%= process.env.AAP_URL %>assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="<%= process.env.AAP_URL %>assets/css/custom.min.css" id="app-style" rel="stylesheet" type="text/css" />

</head>

<body>

    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg"  id="auth-particles">
            <div class="bg-overlay"></div>
            
            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>
    
        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <!-- <a href="index " class="d-block" style="color: #FFF; font-size:20px;">
                                <img src="<%= process.env.AAP_URL %>assets/images/logo-light.png" alt="" height="18">
                                <b>PetroLynk</b>
                            </a> -->
                            <div>
                                <a href="<%= process.env.AAP_URL %>login" class="d-inline-block auth-logo">
                                    <img src="<%= process.env.AAP_URL %>assets/images/logo.jpg" alt="" height="55">
                                </a>
                            </div>
                           <!--  <p class="mt-3 fs-15 fw-medium">Premium Admin & Dashboard Template</p> -->
                        </div>
                    </div>
                </div>
                <!-- end row -->
    
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                        
                            <div class="card-body p-4"> 
                                <div class="text-center mt-2">
                                    <h5 class="text-primary">Welcome Back !</h5>
                                    <p class="text-muted">Sign in to continue to Velzon.</p>
                                </div>
                                
                                <div id="alert_msg">
                                    <% 
                                    
                                        if(status!='' && message != ''){
                                            var icon = 'notification-off-line';
                                
                                            if (status != "success") {
                                                status = "danger";
                                                icon = 'error-warning-line';
                                            }

                                    %>
                                        <div class="alert alert-<%=status%> alert-dismissible alert-solid alert-label-icon fade show" role="alert">
                                            <i class="ri-<%=icon%> me-3 label-icon"></i>
                                            <%=message%>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"> </button>
                                        </div>
                                        <% } %>
                                </div>

                                <p class="error text-danger" id="error"></p>
                                <div class="p-2 mt-4">
                                    <form class="form needs-validation" id="login" method="post" action="<%= process.env.AAP_URL %>send_verification_otp" novalidate >
                                        <div class="mb-3">
                                            <label for="username" class="form-label">Mobile Number<span
                                                    class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="mobno" name="mobno" placeholder="Enter Mobile Number" value="" required>
                                            <div class="invalid-feedback">
                                                Please Enter Mobile Number
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <button class="btn btn-success w-100" type="submit">Submit</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>
                        <!-- end card -->
    
                        <div class="mt-4 text-center">
                            <p class="mb-0">Don't have an account ? <a href="<%= process.env.AAP_URL %>otp_verify" class="fw-semibold text-primary text-decoration-underline"> Signup </a> </p>
                        </div>
    
                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
    
        <!-- footer -->
        <footer class="footer">
            <!-- <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">&copy; <script>document.write(new Date().getFullYear())</script> Velzon. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand</p>
                        </div>
                    </div>
                </div>
            </div> -->
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->


    <!-- JAVASCRIPT -->
    <script src="<%= process.env.AAP_URL %>assets/js/jquery/jquery-3.6.0.min.js" ></script>
    <script src="<%= process.env.AAP_URL %>assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="<%= process.env.AAP_URL %>assets/libs/simplebar/simplebar.min.js"></script>
    <script src="<%= process.env.AAP_URL %>assets/libs/node-waves/waves.min.js"></script>
    <script src="<%= process.env.AAP_URL %>assets/libs/feather-icons/feather.min.js"></script>
    <script src="<%= process.env.AAP_URL %>assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="<%= process.env.AAP_URL %>assets/js/plugins.js"></script>

    <!-- password-addon init -->

    <script src="<%= process.env.AAP_URL %>assets/js/pages/form-validation.init.js"></script>
    <script>
        alert_msg();

        function alert_msg() {
            setTimeout(function() {
                $('#alert_msg').hide();
            }, 10000);
        }
