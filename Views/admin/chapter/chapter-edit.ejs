                                            <input type="hidden" name="id" value="<%= user_data._id%>">
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="chapter_status" class="form-label">Status:</label>
                                            <select class="form-select input mb-3" name="chapter_status" id="chapter_status"
