<%- contentFor('HeaderCss') %>
    <!-- multi.js css -->
    <link rel="stylesheet" type="text/css" href="<%= process.env.AAP_URL %>assets/libs/multi.js/multi.min.css" />
    <!-- autocomplete css -->
    <link rel="stylesheet"
        href="<%= process.env.AAP_URL %>assets/libs/@tarekraafat/autocomplete.js/css/autoComplete.css">
    <!-- Bootstrap Css -->
    <link href="<%= process.env.AAP_URL %>assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet"
        type="text/css" />
    <!-- Plugins css -->
    <link href="<%= process.env.AAP_URL %>assets/libs/dropzone/dropzone.css" rel="stylesheet" type="text/css" />
    <link href="<%= process.env.AAP_URL %>assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet"
        type="text/css" />
    <!-- gridjs css -->
    <link rel="stylesheet" href="<%= process.env.AAP_URL %>assets/libs/gridjs/theme/mermaid.min.css">
    <link href="<%= process.env.AAP_URL %>assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet">
    <link href="<%= process.env.AAP_URL %>assets/libs/choices.js/public/assets/styles/choices.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css"
        integrity="sha512-cyzxRvewl+FOKTtpBzYjW6x6IAYUCZy3sGP40hn+DQkqeluGRCax7qztK2ImL64SA+C7kVWdLI6wvdlStawhyw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        .error {
            color: red;
        }
    </style>
    <%- contentFor('body') %>
        <div class="row">
            <div id="alert_msg" style="display: none;">
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <a href="<%= process.env.AAP_URL %>superadmin/test" class="btn btn-primary waves-effect"><i
                                class="las la-long-arrow-alt-left"></i> Back</a>

                    </div>
                    <!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form class="form needs-validation" id="create_form" enctype="multipart/form-data"
                                method="post" action="<%= process.env.AAP_URL %>superadmin/test/create">
                                <div class="row gy-4">
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="title" class="form-label">Test Name: <span style="color: red;">*</span></label>
                                            <input type="text" name="title" class="form-control input" id="title" required>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="school" class="form-label">School: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 school" name="school" id="school"
                                                required>
                                                <option value="">Select School</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="board" class="form-label">Board: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 board" name="board" id="board"
                                                required>
                                                <option value="">Select Board</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="medium" class="form-label">Medium: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 medium" name="medium" id="medium"
                                                required>
                                                <option value="">Select Medium</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="standard" class="form-label">Standard: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 standard" name="standard"
                                                id="standard" required>
                                                <option value="">Select Standard</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="subject" class="form-label">Subject: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 subject" name="subject" id="subject"
                                                required>
                                                <option value="">Select Subject</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="chapter" class="form-label">Chapter: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 chapter" name="chapter" id="chapter"
                                                required>
                                                <option value="">Select Chapter</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="totalMarks" class="form-label">Total Marks: <span style="color: red;">*</span></label>
                                            <input type="text" name="totalMarks" class="form-control input"
                                                id="totalMarks" required>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="passingPercentage" class="form-label">Passing Percentage: <span style="color: red;">*</span></label>
                                            <input type="text" name="passingPercentage" class="form-control input"
                                                id="passingPercentage" required>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="totalQuestions" class="form-label">Total Questions: <span style="color: red;">*</span></label>
                                            <input type="text" name="totalQuestions" class="form-control input"
                                                id="totalQuestions" required>
                                        </div>
                                    </div>

                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Questions</h5>
                                    </div>

                                    <div class="col-xxl-4 col-md-4">
                                        <label for="questionlist" class="form-label">Questions list: <span style="color: red;">*</span></label>
                                        <select class="js-example-basic-single questionlist" id="select">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div id="sections">

                                    </div>

                                    <div class="col-12">
                                        <button type="submit" id="create_btn"
                                            class="btn btn-primary waves-effect waves-light">Submit</button>
                                    </div>
                                </div>

                            </form>
                            <!--end row-->
                        </div>

                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <%- contentFor('FooterJs') %>

            <!-- multi.js -->
            <script src="<%= process.env.AAP_URL %>assets/libs/multi.js/multi.min.js"></script>
            <!-- autocomplete js -->
            <script
                src="<%= process.env.AAP_URL %>assets/libs/@tarekraafat/autocomplete.js/autoComplete.min.js"></script>
            <!-- init js -->
            <script src="<%= process.env.AAP_URL %>assets/js/pages/form-advanced.init.js"></script>
            <!-- input spin init -->
            <script src="<%= process.env.AAP_URL %>assets/js/pages/form-input-spin.init.js"></script>
            <script src="<%= process.env.AAP_URL %>assets/js/jquery/jquery-3.6.0.min.js"></script>
            <script src="<%= process.env.AAP_URL %>assets/libs/prismjs/prism.js"></script>
            <script src="<%= process.env.AAP_URL %>assets/js/jquery/jquery.validate.min.js"></script>
            <!-- password-addon init -->
            <script src="<%= process.env.AAP_URL %>assets/js/pages/form-validation.init.js"></script>
            <!-- Sweet Alerts js -->
            <script src="<%= process.env.AAP_URL %>assets/libs/sweetalert2/sweetalert2.min.js"></script>
            <!-- Sweet alert init js-->
            <script src="<%= process.env.AAP_URL %>assets/js/pages/sweetalerts.init.js"></script>
            <script src="<%= process.env.AAP_URL %>assets/libs/flatpickr/flatpickr.min.js"></script>
            <script
                src="<%= process.env.AAP_URL %>assets/libs/choices.js/public/assets/scripts/choices.min.js"></script>
            <!--Wysiwig js-->
            <script src="<%= process.env.AAP_URL %>assets/tinymce/tinymce.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"
                integrity="sha512-6lplKUSl86rUVprDIjiW8DuOniNX8UDoRATqZSds/7t6zCQZfaCe3e5zcGaQwxa8Kpn5RTM9Fvl3X2lLV4grPQ=="
                crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <!--jquery cdn-->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <!--select2 cdn-->
            <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

            <script src="<%= process.env.AAP_URL %>assets/tinymce/tinymce.min.js"></script>
            <script src="<%= process.env.AAP_URL %>assets/js/pages/select2.init.js"></script>
            <script>
                $(document).ready(function () {
                    school_list();
                    board_list();
                    $('#board').change(function () {
                        var boardId = $(this).val();
                        board(boardId);
                    });
                    $('#medium').change(function () {
                        var mediumId = $(this).val();
                        var schoolID = $('#school').val();
                        medium(mediumId, schoolID);
                    });
                    $('#standard').change(function () {
                        var standardId = $(this).val();
                        var schoolID = $('#school').val();
                        var mediumId = $('#medium').val();
                        var boardId = $('#board').val();
                        var subjectId = $('#subject').val();
                        standard(standardId, schoolID, mediumId, boardId, subjectId);
                    });
                    $('#subject').change(function () {
                        var subjectId = $(this).val();
                        var mediumId = $('#medium').val();
                        var boardId = $('#board').val();
                        var standardId = $('#standard').val();
                        subject(standardId, mediumId, boardId, subjectId);
                    });

                    $('#chapter').change(function () {
                        var chapterId = $(this).val();
                        var subjectId = $('#subject').val();
                        var mediumId = $('#medium').val();
                        var boardId = $('#board').val();
                        var standardId = $('#standard').val();
                        question_list(standardId, mediumId, boardId, subjectId, chapterId);
                    });

                    $('#select').on('change', function () {
                        var selectedOptionText = $(this).find('option:selected').text();
                        var selectedOptionValue = $(this).val();
                        var contentSections = $('#sections');

                        var newSection = $('<div>').html(`
                            <div class="col-xxl-12 col-md-12 d-flex align-items-center justify-content-between">
                                <div class="row gy-4">
                                    <div class="col-xxl-2 col-md-2">
                                        <div>
                                            <label class="form-label order-label">Order</label>
                                            <input type="number" class="form-control order-input" name="order[]" required>
                                        </div>
                                    </div>
                                    <div class="col-xxl-6 col-md-6">
                                        <div>
                                            <label class="form-label question-label">question</label>
                                            <input type="text" class="form-control question-input" name="question[]" value="${selectedOptionText}" disabled>
                                            <input type="hidden" class="question-id-input" name="questionId[]" value="${selectedOptionValue}">
                                        </div>
                                    </div>
                                    <div class="col-xxl-2 col-md-2">
                                        <div>
                                            <label class="form-label negativeMark-label">negativeMark</label>
                                            <input type="number" class="form-control negativeMark-input" name="negativeMark[]" required>
                                        </div>
                                    </div>
                                    <div class="col-xxl-2 col-md-2">
                                        <div>
                                            <label class="form-label mark-label">mark</label>
                                            <input type="number" class="form-control mark-input" name="mark[]" required>
                                        </div>
                                    </div>
                                </div>
                                <button class="delete-content-section btn btn-danger ml-auto"><i class="ri-delete-bin-5-fill"></i></button>
                            </div>
                            <hr>`);
                        contentSections.append(newSection);
                    });
                });

                $(document).on('click', '.delete-content-section', function () {
                    $(this).closest('div').parent().remove();
                });

                $('#create_form').validate({ // initialize the plugin

                    errorClass: "error",
                    rules: {
                        title: {
                            required: true,
                        },
                        school: {
                            required: true,
                        },
                        board: {
                            required: true,
                        },
                        medium: {
                            required: true,
                        },
                        standard: {
                            required: true,
                        },
                        subject: {
                            required: true,
                        },
                        chapter: {
                            required: true,
                        },
                        totalMarks: {
                            required: true,
                        },
                        passingPercentage: {
                            required: true,
                        },
                        totalQuestions: {
                            required: true,
                        }
                    },
                    messages: {
                        title: {
                            required: 'Please enter title',
                        },
                        school: {
                            required: 'Please enter school',
                        },
                        board: {
                            required: 'Please enter board',
                        },
                        medium: {
                            required: 'Please enter medium',
                        },
                        standard: {
                            required: 'Please enter standard',
                        },
                        order: {
                            required: 'Please enter order',
                        },
                        chapter: {
                            required: 'Please enter chapter',
                        },
                        totalMarks: {
                            required: 'Please select total Marks',
                        },
                        passingPercentage: {
                            required: 'Please enter passing Percentage',
                        },
                        totalQuestions: {
                            required: 'Please enter total Questions',
                        }
                    },
                    highlight: function (element) {
                        $(element).addClass('input_error');
                    },
                    unhighlight: function (element) {
                        $(element).removeClass('input_error');

                    }
                });

                function school_list() {
                    $.get('<%= process.env.AAP_URL %>superadmin/school-list', {},
                        function (data) {
                            if (data.success == 1) {
                                var html = '<option value="">Select School</option>';
                                $.each(data.data, function (index, value) {
                                    html += '<option value="' + value._id + '">' + value.schoolName + '</option>';
                                });
                                $(".school").html(html);
                            }
                        },
                        'json');
                }

                function board_list() {
                    $.get('<%= process.env.AAP_URL %>superadmin/board-list', {},
                        function (data) {
                            if (data.success == 1) {
                                var html = '<option value="">Select Board</option>';
                                $.each(data.data, function (index, value) {
                                    html += '<option value="' + value._id + '">' + value.boardName + '</option>';
                                });
                                $(".board").html(html);
                            }
                        },
                        'json');
                }

                function board(id, board_id = null) {
                    $.post('<%= process.env.AAP_URL %>superadmin/boarding', { board: id }, function (data) {
                        if (data.success == 1) {
                            var html = '<option value="">Select Medium</option>';
                            $.each(data.data, function (index, value) {
                                if (value._id == board_id) {
                                    html += '<option value="' + value._id + '" selected>' + value.mediumName + '</option>';
                                } else {
                                    html += '<option value="' + value._id + '">' + value.mediumName + '</option>';
                                }
                            });
                            $(".medium").html(html);
                        } else {
                            alert_msg("error", data.message);
                        }
                    });
                }

                function medium(id, schoolID, medium_id = null) {
                    $.post('<%= process.env.AAP_URL %>superadmin/stdclass', { medium: id, school: schoolID }, function (data) {
                        if (data.success == 1) {
                            var html = '<option value="">Select Standard</option>';
                            $.each(data.data, function (index, value) {
                                if (value._id == medium_id) {
                                    html += '<option value="' + value._id + '" selected>' + value.standardName + '</option>';
                                } else {
                                    html += '<option value="' + value._id + '">' + value.standardName + '</option>';
                                }
                            });
                            $(".standard").html(html);
                        } else {
                            alert_msg("error", data.message);
                        }
                    });
                }

                function standard(id, schoolID, mediumId, boardId, subjectId, standard_id = null) {
                    $.post('<%= process.env.AAP_URL %>superadmin/stdsubject', { standard: id, school: schoolID, medium: mediumId, board: boardId, subject: subjectId }, function (data) {
                        if (data.success == 1) {
                            var html = '<option value="">Select Subject</option>';
                            $.each(data.data, function (index, value) {
                                if (value._id == standard_id) {
                                    html += '<option value="' + value._id + '" selected>' + value.subjectName + '</option>';
                                } else {
                                    html += '<option value="' + value._id + '">' + value.subjectName + '</option>';
                                }
                            });
                            $(".subject").html(html);
                        } else {
                            alert_msg("error", data.message);
                        }
                    });
                }

                function subject(id, mediumId, boardId, subjectId, subject_id = null) {
                    $.post('<%= process.env.AAP_URL %>superadmin/stdchapter', { standard: id, medium: mediumId, board: boardId, subject: subjectId }, function (data) {
                        if (data.success == 1) {
                            var html = '<option value="">Select Chapter</option>';
                            $.each(data.data, function (index, value) {
                                if (value._id == subject_id) {
                                    html += '<option value="' + value._id + '" selected>' + value.chapterName + '</option>';
                                } else {
                                    html += '<option value="' + value._id + '">' + value.chapterName + '</option>';
                                }
                            });
                            $(".chapter").html(html);
                        } else {
                            alert_msg("error", data.message);
                        }
                    });
                }

                function question_list(id, mediumId, boardId, subjectId, chapterId, ques_id = null) {
                    $.post('<%= process.env.AAP_URL %>superadmin/stdquestion', { standard: id, medium: mediumId, board: boardId, subject: subjectId, chapter: chapterId }, function (data) {
                        if (data.success == 1) {
                            var html = '<option value="">Select Questions</option>';
                            $.each(data.data, function (index, value) {
                                if (value._id == ques_id) {
                                    html += '<option value="' + value._id + '" selected>' + value.question + '</option>';
                                } else {
                                    html += '<option value="' + value._id + '">' + value.question + '</option>';
                                }
                            });
                            $(".questionlist").html(html);
                        } else {
                            alert_msg("error", data.message);
                        }
                    });
                }


            </script>