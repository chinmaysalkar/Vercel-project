        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .error {
            color: red;
        }
    </style>
    <%- contentFor('body') %>
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <a href="javascript:history.go(-1)" class="btn btn-primary waves-effect"><i
                                class="las la-long-arrow-alt-left"></i> Back</a>

                    </div>
                    <!-- end card header -->
                    <div class="card-body">
                        <div class="live-preview">
                            <form class="form needs-validation" id="edit_form" enctype="multipart/form-data"
                                method="post" action="<%= process.env.AAP_URL %>superadmin/medium/update">
                                <div class="row gy-4">
                                    <div class="col-xxl-3 col-md-3">
                                        <div>
                                            <label for="mediumId" class="form-label">Medium ID:</label>
                                            <input type="text" class="form-control input" id="mediumId"
                                            value="<%= user_data.mediumId%>" disabled>
                                        </div>
                                    </div>
                                    <div class="col-xxl-3 col-md-3">
                                        <div>
                                            <label for="board" class="form-label">Board: <span style="color: red;">*</span></label>
                                            <select class="form-select input mb-3 board" name="board" id="board">
                                                <option value="">Select Board</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-3 col-md-3">
                                        <div>
                                            <label for="mediumName" class="form-label">Medium Name: <span style="color: red;">*</span></label>
                                            <input type="text" name="mediumName" class="form-control input"
                                                id="mediumName" placeholder="Medium Name" value="<%= user_data.mediumName%>">
                                            <input type="hidden" name="id" value="<%= user_data._id%>">
                                        </div>
                                    </div>
                                    <div class="col-xxl-3 col-md-3">
                                        <div>
                                            <label for="medium_status" class="form-label">Status</label>
                                            <select class="form-select input mb-3" name="medium_status" id="medium_status"
                                                required>
                                                <option value="">Select Status </option>
                                                <option value="1" <% if(user_data.status==true ){ %>selected <% } %>
                                                        >Active</option>
                                                <option value="0" <% if(user_data.status==false ){ %>selected <% } %>
                                                        >Inactive</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-xxl-4 col-md-4">
                                        <div>
                                            <label for="description" class="form-label">Description: <em>(Optional)</em></label>
                                            <textarea class="form-control" name="description"
                                                class="form-control input reset_input" id="description" rows="5"><%= user_data.description%></textarea>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <button type="submit" id="create_btn"
                                            class="btn btn-primary waves-effect waves-light">Submit</button>
                                    </div>
                                </div>
                            </form>
                            <!--end row-->
                        </div>

                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
        <%- contentFor('FooterJs') %>

            <!-- ckeditor -->
            <script
